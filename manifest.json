{
  "manifest_version": 2,

  "name": "No Click Bait Plugin",
  "description": "This extension will give you information without clicking",
  "version": "1.0",

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icon.png",
      "32": "./icon.png",
      "48": "./icon.png",
      "128": "./icon.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Run anti click bait"
    }
  },
  "permissions": ["declarativeContent", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.ynet.co.il/*"],
      "js": ["./jquery.min.js", "./js/main.js"]
    }
  ]
}
